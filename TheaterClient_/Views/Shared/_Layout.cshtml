<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Theater Client</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <header>
        @Html.ActionLink("Home", "Index", "Home")
        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Logout", "Logout", "Authentication")
            @Html.ActionLink(User.Identity.Name, "Index", "User")
        }
        else
        {
            @Html.ActionLink("Register", "Register", "Authentication")
            @Html.ActionLink("Login", "Login", "Authentication")
        }
    </header>
    
    @RenderBody()
    
    <footer>
        © 2022 🎦
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>

